@model MusicPortal.Models.Коллективы
@{
    ViewData["Title"] = "Создние коллектива";
}
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12" style="border-bottom:1px solid gray">
                <a style="font-size:11px; color: gray" asp-action="Adding" asp-controller="Home">Добавление</a>
                <a style="font-size:11px; color:gray">></a>
                <a style="font-size:11px; color: gray" asp-action="Bands" asp-controller="Create">Коллектива</a>
            </div>
        </div>
        <div class="row" style="margin-top:20px">
            <div class="col-12">
                <h6>Добавление нового коллектива</h6>
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-12">
                <p>Введите название коллектива и сопутствующую информацию</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <form method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Название_коллектива">Название коллектива</label>
                        <input style="border:none; border-bottom:1px solid black" type="text" asp-for="Название_коллектива" class="form-control" />
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="form-group">
                            <label asp-for="Дата_образования">Дата образования</label>
                            <input type="date" asp-for="Дата_образования" class="form-control" />
                        </div>
                        <div class="form-group" style="margin-left:1rem">
                            <label asp-for="Дата_расспада">Дата распада</label>
                            <input type="date" asp-for="Дата_расспада" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_типа_коллектива">Тип коллектива</label>
                        <select asp-for="ID_типа_коллектива" class="js-chosen">
                            <option value="null">
                                Не выбрано
                            </option>
                            @for (int i=0;i<ViewBag.typesCount;i++)
                            {
                                <option value="@i">
                                    @ViewBag.types[i]
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Добавить колектив</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.js-chosen').chosen({
                width: '100%',
                no_results_text: 'Совпадений не найдено',
                placeholder_text_single: 'Выберите город'
            });
        });
    </script>
}