@model MusicPortal.Models.Исполнители
@{
    ViewData["Title"] = "Добавление исполнителя";
}
<div class="row">
    <div class="col-12">
        <div class="row">
            <div class="col-12" style="border-bottom:1px solid gray">
                <a style="font-size:11px; color: gray" asp-action="Adding" asp-controller="Home">Добавление</a>
                <a style="font-size:11px; color:gray">></a>
                <a style="font-size:11px; color: gray" asp-action="Ispolniteli" asp-controller="Create">Исполнителя</a>
            </div>
        </div>
        <div class="row" style="margin-top:20px">
            <div class="col-12">
                <h6>Добавление нового исполнителя</h6>
            </div>
        </div>
        <div class="row" style="margin-top:10px">
            <div class="col-12">
                <p>Введите название исполнителя и сопутствующую информацию</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12 d-flex justify-content-center">
                <form method="post" enctype="multipart/form-data">
                    <h6>Блок личной информации</h6>
                    <div class="d-flex align-items-center">
                        <div class="form-group">
                            <label asp-for="Фамилия">Фамилия</label>
                            <input type="text" asp-for="Фамилия" class="form-control" />
                        </div>
                        <div class="form-group" style="margin-left:1rem">
                            <label asp-for="Имя">Имя</label>
                            <input type="text" asp-for="Имя" class="form-control" />
                        </div>
                    </div>
                    <h6>Блок информации об участии в коллективе</h6>
                    <div class="form-group">
                        <label for="band">Выберите коллектив в котором учавствует исполнитель</label>
                        <select name="band" class="js-chosen">
                            <option value="null">
                                Не выбрано
                            </option>
                            @foreach (var item in ViewBag.Bands)
                            {
                                <option value="@item">
                                    @item
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="role">Выберите роль в коллективе</label>
                        <select name="role" class="js-chosen">
                            <option value="null">
                                Не выбрано
                            </option>
                            @foreach (var item in ViewBag.Roles)
                            {
                                <option value="@item">
                                    @item
                                </option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="start_date">Введите дату начала работы в коллективе</label>
                        <input type="date" class="form-control" name="start_date" id="start_date" />
                    </div>
                    <div class="form-group">
                        <label for="end_date">Введите дату окончания работы в коллективе</label>
                        <input type="date" class="form-control" name="end_date" id="end_date" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-success">Добавить исполнителя</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.js-chosen').chosen({
                width: '100%',
                no_results_text: 'Совпадений не найдено',
                placeholder_text_single: 'Выберите город'
            });
        });
    </script>
}